@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<br />
<div class="text-center">
    <img class="logo-img" src="https://dewey.tailorbrands.com/production/brand_version_mockup_image/664/6417604664_7b3f693a-8829-40c9-be36-20aea458b18f.png?cb=1637693340" alt="">
</div>
<br />

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Registrar </h3>
        <i class="fas fa-check"></i>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <!-- input states -->
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="col-form-label" asp-for="Input.Email">
                    Correo electronico
                </label>
                <input class="form-control" asp-for="Input.Email" placeholder="Email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="col-form-label" asp-for="Input.Password">
                    Contraseña
                </label>
                <input class="form-control" asp-for="Input.Password" placeholder="Contraseña">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="col-form-label" asp-for="Input.ConfirmPassword">
                    Confirmar Contraseña
                </label>
                <input class="form-control" asp-for="Input.ConfirmPassword" placeholder="Contraseña">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="card-footer float-right">
                <input type="submit" value="Guardar" class="btn btn-primary " />
            </div>

        </form>
    </div>
    <!-- /.card-body -->
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
