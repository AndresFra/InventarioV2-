@model Inventario.Entities.Model.Empleado

@{
    ViewData["Title"] = "Edit";
}

<br />
<div class="text-center">
    <img class="logo-img" src="https://dewey.tailorbrands.com/production/brand_version_mockup_image/664/6417604664_7b3f693a-8829-40c9-be36-20aea458b18f.png?cb=1637693340" alt="">
</div>
<br />

<div class="card card-warning">
    <div class="card-header">
        <h3 class="card-title">Editar empleado </h3>
        <i class="fas fa-check"></i>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form asp-action="Edit">
            <!-- input states -->
            <div class="form-group">
                <label class="col-form-label" asp-for="Nombre">
                    Nombre
                </label>
                <input class="form-control" asp-for="Nombre" placeholder="Introduzca los datos...">
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="col-form-label" asp-for="Posicion">
                    Posicion
                </label>
                <input class="form-control" asp-for="Posicion" placeholder="Introduzca los datos...">
                <span asp-validation-for="Posicion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="col-form-label" asp-for="Direccion">
                    Direccion
                </label>
                <input class="form-control" asp-for="Direccion" placeholder="Introduzca los datos...">
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="col-form-label" asp-for="Localidad">
                    Localidad
                </label>
                <input class="form-control" asp-for="Localidad" placeholder="Introduzca los datos...">
                <span asp-validation-for="Localidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="col-form-label" asp-for="Codigo">
                    Codigo
                </label>
                <input class="form-control" asp-for="Codigo" placeholder="Introduzca los datos...">
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>

            <div class="card-footer float-right">
                <input type="submit" value="Guardar" class="btn btn-primary " />
                <a class="btn btn-danger " asp-action="Index">Cancelar</a>
            </div>

        </form>
    </div>
    <!-- /.card-body -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
