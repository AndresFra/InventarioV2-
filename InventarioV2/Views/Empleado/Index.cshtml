@model IEnumerable<Inventario.Entities.Dto.EmpleadoDto>

@{
    ViewData["Title"] = "Index";
}

<br />
<div class="text-center">
    <img class="logo-img" src="https://dewey.tailorbrands.com/production/brand_version_mockup_image/664/6417604664_7b3f693a-8829-40c9-be36-20aea458b18f.png?cb=1637693340" alt="">
</div>
<br />
<div>
    <a asp-action="Create" class="btn btn-outline-dark">Agregar nuevo empleado</a>
</div>

<br />
<div class="card card-gray-dark">
    <div class="card-header">
        <h3 class="card-title">Empleados </h3>
        <i class="fas fa-check-circle"></i>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover dataTable dtr-inline">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Posicion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Direccion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Localidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Codigo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Posicion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Localidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codigo)
                        </td>
                        <td>

                            <a class="btn btn-sm btn-primary fas fa-edit" href="~/Empleado/Edit/@item.Id"></a>

                            <a class="btn btn-sm btn-danger fas fa-trash-alt" href="~/Empleado/Delete/@item.Id"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>






