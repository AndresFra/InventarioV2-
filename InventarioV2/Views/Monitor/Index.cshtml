@model IEnumerable<Inventario.Entities.Dto.MonitorDto>

@{
    ViewData["Title"] = "Index";
}
<br />
<div class="text-center">
    <img class="logo-img" src="https://dewey.tailorbrands.com/production/brand_version_mockup_image/664/6417604664_7b3f693a-8829-40c9-be36-20aea458b18f.png?cb=1637693340" alt="">
</div>
<br />
<div>
    <a asp-action="Create" class="btn btn-outline-dark">Agregar nuevo monitor</a>
</div>

<br />
<div class="card card-gray-dark">
    <div class="card-header">
        <h3 class="card-title">Monitores </h3>
        <i class="fas fa-check-circle"></i>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover dataTable dtr-inline">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Marca)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Serial)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Modelo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tamaño)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cantidad)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Serial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Modelo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tamaño)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cantidad)
                        </td>
                        <td>
                            <a class="btn btn-sm btn-primary fas fa-edit" href="~/Monitor/Edit/@item.Id"></a>

                            <a class="btn btn-sm btn-danger fas fa-trash-alt" href="~/Monitor/Delete/@item.Id"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>



