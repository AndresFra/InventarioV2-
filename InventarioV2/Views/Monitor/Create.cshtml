@model Inventario.Entities.Model.Monitor

@{
    ViewData["Title"] = "Create";
}

<br />
<div class="text-center">
    <img class="logo-img" src="https://dewey.tailorbrands.com/production/brand_version_mockup_image/664/6417604664_7b3f693a-8829-40c9-be36-20aea458b18f.png?cb=1637693340" alt="">
</div>
<br />
<div class="card card-warning">
    <div class="card-header">
        <h3 class="card-title">Crear monitor </h3>
        <i class="fas fa-check"></i>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form asp-action="Create">
            <!-- input states -->
            <div class="form-group">
                <label class="col-form-label" asp-for="Marca">
                    Marca
                </label>
                <input class="form-control" asp-for="Marca" placeholder="Introduzca los datos...">
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="col-form-label" asp-for="Serial">
                    Serial
                </label>
                <input class="form-control" asp-for="Serial" placeholder="Introduzca los datos...">
                <span asp-validation-for="Serial" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="col-form-label" asp-for="Modelo">
                    Modelo
                </label>
                <input class="form-control" asp-for="Modelo" placeholder="Introduzca los datos...">
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="col-form-label" asp-for="Tamaño">
                    Tamaño
                </label>
                <input class="form-control" asp-for="Tamaño" placeholder="Introduzca los datos...">
                <span asp-validation-for="Tamaño" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="col-form-label" asp-for="Cantidad">
                    Cantidad de monitores
                </label>
                <input class="form-control" asp-for="Cantidad" placeholder="Introduzca los datos...">
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>

            <div class="card-footer float-right">
                <input type="submit" value="Guardar" class="btn btn-primary " />
                <a class="btn btn-danger " asp-action="Index">Cancelar</a>
            </div>

        </form>
    </div>
    <!-- /.card-body -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
