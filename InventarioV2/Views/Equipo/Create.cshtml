@model Inventario.Entities.Model.Equipo

@{
    ViewData["Title"] = "Create";
}

<br />
<div class="text-center">
    <img class="logo-img" src="https://dewey.tailorbrands.com/production/brand_version_mockup_image/664/6417604664_7b3f693a-8829-40c9-be36-20aea458b18f.png?cb=1637693340" alt="">
</div>
<br />
<div class="card card-warning">
    <div class="card-header">
        <h3 class="card-title">Crear equipo </h3>
        <i class="fas fa-check"></i>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form asp-action="Create">
            <!-- input states -->
            <div class="row">
                <div class="col-sm-6">
                    <!-- select -->
                    <div class="form-group">
                        <label class="col-form-label" asp-for="EmpleadoId">
                            Empleado
                        </label>
                        @Html.DropDownList("empleadoId", null, "Seleccionar", new { @class = "btn btn-primary dropdown-toggle form-control" })
                        <span asp-validation-for="EmpleadoId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-sm-6">
                    <!-- select -->
                    <div class="form-group">
                        <label class="col-form-label" asp-for="MarcaId">
                            Marca
                        </label>
                        @Html.DropDownList("marcaId", null, "Seleccionar", new { @class = "btn btn-primary dropdown-toggle form-control" })
                        <span asp-validation-for="MarcaId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-form-label" asp-for="Procesador">
                    Procesador
                </label>
                <input class="form-control" asp-for="Procesador" placeholder="Introduzca los datos...">
                <span asp-validation-for="Procesador" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="col-form-label" asp-for="Memoria">
                    Memoria
                </label>
                <input class="form-control" asp-for="Memoria" placeholder="Introduzca los datos...">
                <span asp-validation-for="Memoria" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="col-form-label" asp-for="Disco">
                    Disco
                </label>
                <input class="form-control" asp-for="Disco" placeholder="Introduzca los datos...">
                <span asp-validation-for="Disco" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="col-form-label" asp-for="Serial">
                    Serial
                </label>
                <input class="form-control" asp-for="Serial" placeholder="Introduzca los datos...">
                <span asp-validation-for="Serial" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <!-- select -->
                    <div class="form-group">
                        <label class="col-form-label" asp-for="AsignacionId">
                            Asignacion
                        </label>
                        @Html.DropDownList("asignacionId", null, "Seleccionar", new { @class = "btn btn-primary dropdown-toggle form-control" })
                        <span asp-validation-for="AsignacionId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-sm-6">
                    <!-- select -->
                    <div class="form-group">
                        <label class="col-form-label" asp-for="ModeloId">
                            Modelo
                        </label>
                        @Html.DropDownList("modeloId", null, "Seleccionar", new { @class = "btn btn-primary dropdown-toggle form-control" })
                        <span asp-validation-for="ModeloId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <!-- select -->
                    <div class="form-group">
                        <label class="col-form-label" asp-for="MonitorId">
                            Monitor
                        </label>
                        @Html.DropDownList("monitorId", null, "Seleccionar", new { @class = "btn btn-primary dropdown-toggle form-control" })
                        <span asp-validation-for="MonitorId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-sm-6">
                    <!-- select -->
                    <div class="form-group">
                        <label class="col-form-label" asp-for="AccesorioId">
                            Accesorio
                        </label>
                        @Html.DropDownList("AccesorioId", null, "Seleccionar", new { @class = "btn btn-primary dropdown-toggle form-control" })
                        <span asp-validation-for="AccesorioId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <!-- select -->
                    <div class="form-group">
                        <label class="col-form-label" asp-for="FechaCreacion">
                            Fecha de creacion
                        </label>
                        @Html.EditorFor(d => d.FechaCreacion, "", new { @class = "form-control" })
                        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-sm-2">
                    <!-- select -->
                    <div class="form-group">
                        <label class="col-form-label" asp-for="FechaActualizacion">
                            Fecha de actualizacion
                        </label>
                        @Html.EditorFor(d => d.FechaActualizacion, "", new { @class = "form-control" })

                    </div>
                </div>

                <div class="col-sm-2">
                    <!-- select -->
                    <div class="form-group">
                        <label class="col-form-label" asp-for="FechaDespacho">
                            Fecha de despacho
                        </label>
                        @Html.EditorFor(d => d.FechaDespacho, "", new { @class = "form-control" })

                    </div>
                </div>
            </div>

            <div class="card-footer float-right">
                <input type="submit" value="Guardar" class="btn btn-primary " />
                <a class="btn btn-danger " asp-action="Index">Cancelar</a>
            </div>

        </form>
    </div>
    <!-- /.card-body -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
